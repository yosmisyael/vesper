// rofi config for clipboard manager
// by yosmisyael (2024)

configuration {
    modi:                  "clipboard:greenclip print";
    font:                  "SF Pro Display 12";
    show-icons:            false;
    display-clipboard:     "󰅌";
    hover-select:          false;
    scroll-method:         1;
    me-select-entry:       "";
    me-accept-entry:       "MousePrimary";
}

@theme "~/.config/rofi/colors.rasi"

// Main Window - Clipboard Manager Style
window {
    height:                      28em;
    width:                       45em;
    transparency:                "real";
    fullscreen:                  false;
    enabled:                     true;
    cursor:                      "default";
    spacing:                     0em;
    padding:                     0em;
    border:                      2px solid;
    border-color:                @primary;
    location:                    center;
    background-color:            @surface;
    anchor:                      center;
    border-radius:               20px;
    expand:                      false;
}

mainbox {
    enabled:                     true;
    spacing:                     0em;
    padding:                     0em;
    orientation:                 vertical;
    children:                    [ "inputbar", "listview" ];
    background-color:            transparent;
}

// Input Bar for Search/Filter
inputbar {
    enabled:                     true;
    spacing:                     0em;
    padding:                     1.5em 2em;
    border-radius:               20px 20px 0px 0px;
    children:                    [ "textbox-prompt-colon", "entry" ];
    background-color:            @surface-container-high;
    border:                      0px 0px 1px 0px solid;
    border-color:                @outline-variant;
}

textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    str:                         "󰅌 ";
    padding:                     0.8em 0.5em;
    text-color:                  @primary;
    background-color:            transparent;
    font:                        "SF Pro Display 14";
}

entry {
    enabled:                     true;
    spacing:                     0em;
    padding:                     0.8em 1em;
    background-color:            @surface-container;
    text-color:                  @on-surface;
    cursor:                      text;
    placeholder:                 "Search clipboard history...";
    placeholder-color:           @outline;
    border-radius:               12px;
}

// Clipboard History List
listview {
    padding:                     1em 2em 2em 2em;
    spacing:                     0.5em;
    enabled:                     true;
    columns:                     1;
    lines:                       10;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   true;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    cursor:                      "default";
    background-color:            transparent;
    text-color:                  @on-surface;
}

// Clipboard Entry Elements
element {
    enabled:                     true;
    spacing:                     0.8em;
    padding:                     1.2em 1.5em;
    border-radius:               12px;
    background-color:            transparent;
    text-color:                  @on-surface;
    cursor:                      pointer;
    orientation:                 horizontal;
    border:                      1px solid;
    border-color:                transparent;
}

element.normal.normal {
    background-color:            @surface-container-low;
    text-color:                  @on-surface;
    border-color:                @outline-variant;
}

element.selected.normal {
    background-color:            @primary-container;
    text-color:                  @on-primary-container;
    border-color:                @primary;
}

element.alternate.normal {
    background-color:            @surface-container;
    text-color:                  @on-surface;
    border-color:                @outline-variant;
}

element.normal.urgent {
    background-color:            @error-container;
    text-color:                  @on-error-container;
    border-color:                @error;
}

element.selected.urgent {
    background-color:            @error;
    text-color:                  @on-error;
    border-color:                @error;
}

element.normal.active {
    background-color:            @tertiary-container;
    text-color:                  @on-tertiary-container;
    border-color:                @tertiary;
}

element.selected.active {
    background-color:            @tertiary;
    text-color:                  @on-tertiary;
    border-color:                @tertiary;
}

// Clipboard Entry Text
element-text {
    background-color:            transparent;
    text-color:                  inherit;
    expand:                      true;
    horizontal-align:            0.0;
    vertical-align:              0.5;
    cursor:                      inherit;
    font:                        "SF Pro Display 11";
}

// Scrollbar for Long Clipboard History
scrollbar {
    width:                       6px;
    border:                      0px;
    handle-color:                @primary;
    handle-width:                6px;
    padding:                     0px 4px;
    background-color:            @surface-container-highest;
    border-radius:               8px;
    margin:                      0px 0px 0px 8px;
}

// Message for Empty Clipboard
message {
    enabled:                     true;
    padding:                     2em;
    border-radius:               16px;
    background-color:            @surface-container;
    text-color:                  @on-surface-variant;
    border:                      1px solid;
    border-color:                @outline-variant;
}

textbox {
    background-color:            transparent;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
    font:                        "SF Pro Display 12";
}

// Error Message Styling
error-message {
    padding:                     2em;
    border-radius:               16px;
    background-color:            @error-container;
    text-color:                  @on-error-container;
    border:                      1px solid;
    border-color:                @error;
}
